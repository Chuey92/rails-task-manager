<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
      <strong>Title:</strong> <%= link_to task.title, task_path(task) %><br>
      <strong>Details:</strong> <%= task.details %><br>
      <strong>Completed:</strong> <%= task.completed ? "Yes" : "No" %><br>
      <%= link_to 'Edit', edit_task_path(task) %> |
      <%= link_to 'Delete', delete_task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete this task?" } %>
    </li>
  <% end %>
</ul>
