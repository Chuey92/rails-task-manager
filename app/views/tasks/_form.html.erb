<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </div>

  <% if show_completed %>
    <div>
      <%= form.label :completed %><br>
      <%= form.check_box :completed %>
    </div>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
